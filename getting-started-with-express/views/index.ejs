<% include partials/header %>
    <h1>Add customers</h1>
    <% if(errors){ %>
        <ul>
        <% errors.forEach( function(error) { %>      
          <li><%= error.msg %></li>      
        <% }); %>
      </ul>
    <% } %>
    <form method="POST" action="/users/add">
        <label>Name</label>
        <input type="text" name="name">
        <input type="submit" value="submit">
    </form>
    <h1><%= title %></h1>
    <ul>
    <% users.forEach(function(user){ %>
        <li><%= user.name %></li>
    <% }) %>
    </ul>
    
<% include partials/footer %>

